<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>

        <referenceContainer name="page.wrapper">
            <container name="banner.holder" before="main.content" label="Banner Container" htmlTag="section" htmlClass="banner-holder">
                <block class="Magento\Cms\Block\Block" name="homepage.banner" after="header.container">
                    <arguments>
                        <argument name="block_id" xsi:type="string">home_banner</argument>
                    </arguments>
                </block>
            </container>
        </referenceContainer>

    </body>
</page>
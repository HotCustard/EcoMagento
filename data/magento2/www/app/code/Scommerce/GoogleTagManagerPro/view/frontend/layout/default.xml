        </referenceContainer>
		<referenceContainer name="after.body.start">
            <block class="Scommerce\GoogleTagManagerPro\Block\Gtm" name="google_tag_manager_pro_ns" as="google_tag_manager_pro_ns" template="gtmns.phtml" before="-"/>
        </referenceContainer>
    </body>
</page>
